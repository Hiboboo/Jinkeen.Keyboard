<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.jinkeen.keyboard.SafetyInputEditText
            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="88dp"
            app:si_keyboard_type="QWERTY"
            android:hint="全键盘"
            android:textColor="@color/black"
            android:background="#ccff00"/>
        <com.jinkeen.keyboard.SafetyInputEditText
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            app:si_keyboard_type="NUMBER"
            app:si_decimal_point="false"
            android:hint="数字键盘"
            android:textColor="@color/black"
            android:background="#66ccff"/>
        <com.jinkeen.keyboard.SafetyInputEditText
            android:id="@+id/edit_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            app:si_keyboard_type="IDCARD"
            android:hint="身份证键盘"
            android:textColor="@color/black"
            android:background="#FFDAB9"/>
        <Button
            android:id="@+id/hide_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="58dp"
            android:layout_marginTop="15dp"
            android:text="隐藏"/>
        <Button
            android:id="@+id/show_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="58dp"
            android:layout_marginTop="15dp"
            android:text="显示"/>
    </LinearLayout>
</layout>